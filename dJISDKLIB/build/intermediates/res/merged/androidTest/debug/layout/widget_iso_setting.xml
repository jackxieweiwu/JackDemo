<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_iso_title"
        style="@style/camera_exposure_settings_title"
        android:text="@string/camera_exposure_iso_title" />

    <LinearLayout
        android:id="@+id/seekbar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@color/black_light">


        <dji.midware.ui.internal.DULSeekBar
            android:id="@+id/seekbar_iso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"/>


        <ImageView
            android:id="@+id/button_iso_auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_cycle_button_background"
            android:src="@drawable/auto_iso"
            android:adjustViewBounds="true"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:visibility="visible" />
    </LinearLayout>
</merge>