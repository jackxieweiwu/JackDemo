<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:padding="@dimen/activity_magin_10"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_switch_one"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_height="35dip"
        android:text="按钮一："/>

    <Switch
        android:layout_width="55dip"
        android:layout_height="wrap_content"
        android:thumb="@mipmap/fpv_switch_ball"
        android:background="@mipmap/fpv_switch_bg"/>

    <TextView
        android:layout_marginLeft="@dimen/activity_magin_10"
        android:id="@+id/txt_switch_two"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_height="35dip"
        android:text="按钮二："/>

    <Switch
        android:layout_width="55dip"
        android:layout_height="wrap_content"
        android:thumb="@mipmap/fpv_switch_ball"
        android:background="@mipmap/fpv_switch_bg"/>

    <TextView
        android:layout_marginLeft="@dimen/activity_magin_10"
        android:id="@+id/txt_switch_three"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_height="35dip"
        android:text="按钮三："/>

    <Switch
        android:layout_width="55dip"
        android:layout_height="wrap_content"
        android:thumb="@mipmap/fpv_switch_ball"
        android:background="@mipmap/fpv_switch_bg"/>
</LinearLayout>